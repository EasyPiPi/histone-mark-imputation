#!/usr/bin/bash

INIT=(1)
RELE=(0.5 0.1 0.05 0.01 0.005 0.001)
for i in ${INIT[*]}
do
 for r in ${RELE[*]}
 do
   echo $i $r
   ./mcmc_polii $i $r | sort-bed - > tmp.bed
   bedtools genomecov -bg -strand + -i tmp.bed -g chrominfo.txt > tmp.plus.bg
   bedtools genomecov -bg -strand - -i tmp.bed -g chrominfo.txt > tmp.minus.bg
   bedGraphToBigWig tmp.plus.bg chrominfo.txt data_${i}_${r}.plus.bw
   bedGraphToBigWig tmp.minus.bg chrominfo.txt data_${i}_${r}.minus.bw
 done
done
